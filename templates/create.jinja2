{% extends 'base.jinja2' %}

{% block subtitle %}Donations{% endblock subtitle %}

{% block content %}
<form method="POST">
    {% if error %}<span class="error">{{ error }}<br>{% endif %}
    <label for="name">Name: </label><input type="text" id="name" name="name">
    <label for="donation">Donation: </label><input type="number" id="donation" name="donation">
    <input type="submit" value="Enter">
</form>
{% endblock content %}
